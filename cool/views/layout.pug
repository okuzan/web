doctype html
html
  head
    title Cool site
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')      

  body 
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href=(current.split("/")[1] === 'en' ? '/en' : '')) #{domain}
        #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              each link in links
                li(class=(link[1] === current ? "active" : undefined)) 
                  a(href=link[1])
                    font(color=color) #{link[0]}
            ul.nav.navbar-nav.navbar-right
              li.lang
                a(href=(current.split("/")[1] === 'en' ? current : "/en" + (current != '/' ? current : ''))) EN
              li.lang
                a(href=(current.split("/")[1] === 'en' ? current.substring(3) + '/' : current)) UA
    .container
      block content
          include form
      block content2
      block scripts
        script(src='/bower_components/jquery/dist/jquery.js')  
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')
        script(src='https://cdn.jsdelivr.net/npm/vue/dist/vue.js')
        script(src='https://unpkg.com/vuex')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.16/vue.js') //careful
